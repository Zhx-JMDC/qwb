<extend name="Public/base" />
<block name="style">
<link href="__CSS__/Fancybox/jquery.fancybox-1.3.1.css" rel="stylesheet">
<style>
.upload-pre-item img{width:100px;height:100px;}
</style>
</block>
<block name="body">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h4>文章详情</h4>
        </div>
        <div class="panel-body table">
			<table border=0 class="">
				<notempty name="_article">
					<tr><td align='right'>文章ID：</td><td>{$_article['id']}</td></tr>
			    	<tr><td align='right'>文章标题：</td><td>{$_article['title']}</td></tr>
					<td align='right'>文章类型：</td><td>{$_article['type']}</td></tr>
					<tr><td align='right'>文章内容：</td><td>{$_article['content']}</td></tr>
					<tr><td align='right'>文章配图：</td><td>
						<volist name="_img_src" id="vo">
						<td><img style="height:50px" src="{$vo}"></td>
						</volist>
					</td></tr>
                    <tr><td align='right'>文章来源：</td><td>{$_article['article_from']}</td></tr>
					<tr><td align='right'>发表时间：</td><td><?php echo date("Y年 n月 j日 H:i",$_article['create_time'])?></td></tr>
			    <else />
			    <thead><tr><th colspan="14" style="text-align:center;">该任务不存在!</th></tr></thead>
			    </notempty>
		    </table>
			<div class="panel-heading">
				<h4>评论列表</h4>
			</div>
			<table class="table">
				<thead>
				<tr>
					<th>评论ID</th>
					<th>评论人的用户ID</th>
                    <th>评论内容</th>
					<th>评论时间</th>
				</tr>
				</thead>
				<tbody>
				<notempty name="_comment">
					<volist name="_comment" id="vo">
						<tr>
							<td>{$vo.id} </td>
							<td>{$vo.user_id}</td>
                            <td>{$vo.content}</td>
							<td><?php echo date("Y年 n月 j日 H:i",$vo['create_time'])?></td>
						</tr>
					</volist>
					<else/>
					<td colspan="10" class="text-center"> aOh! 暂时还没有内容! </td>
				</notempty>
				</tbody>
			</table>
        </div>
        <div class="panel-footer">
            <button class="btn btn-return" onclick="javascript:history.back(-1);return false;">返 回</button>
        </div>
    </div>
</block>

<block name="script">
	<script src="__JS__/common.js"></script>
</block>