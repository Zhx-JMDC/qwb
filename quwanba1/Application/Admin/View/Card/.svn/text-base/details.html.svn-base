<extend name="Public/base" />
<block name="style">
	<link href="__CSS__/Fancybox/jquery.fancybox-1.3.1.css" rel="stylesheet">
	<style>
		.upload-pre-item img{width:100px;height:100px;}
	</style>
</block>
<block name="body">
	<input type="hidden" name="id" value="{$Think.get.id}">
	<div class="panel panel-default">
		<div class="panel-heading">
			<h4>热门商家详情</h4>
		</div>
		<form method="post" action="{:U('Card/express_edit')}">
		<div class="panel-body table">
			<table border=0 class="">
				<notempty name="card">
					<tr>
						<td align='right'>交易ID：</td>
						<td>{$card['id']}</td>
					</tr>
					<tr>
						<td align='right'>卡种：</td>
						<td>
							<if condition="$card.card_id eq 1">S级<else/>V级</if>
						</td>
					</tr>
					<tr>
						<td align='right'>买家姓名：</td>
						<td>{$card['name']}</td>
					</tr>
					<tr>
						<td align='right'>买家手机号：</td>
						<td>{$card['contact']}</td>
					</tr>
					<tr>
						<td align='right'>邮政编码：</td>
						<td>{$card['postcode']}</td>
					</tr>
					<tr>
						<td align='right'>收货地址：</td>
						<td>{$card['address']}</td>
					</tr>
					<tr>
						<td align='right'>交易金额：</td>
						<td>{$card['price']}</td>
						</td>
					</tr>
					<tr>
						<td align='right'>买家留言：</td>
						<td>{$card['message']}</td>
						</td>
					</tr>
					<tr>
						<td align='right'>购买时间：</td>
						<td>{$card['time']}</td>
						</td>
					</tr>
					<tr>
						<td align='right'>物流单号：</td>
						<td>
							<input type="text" name="express_num" value="{$card['express_num']}" placeholder="物流单号" id="input-express_num" class="form-control">
							<input type="hidden" name="id" value="{$card['id']}">
						</td>
					</tr>
					<tr>
						<td align='right'>状态：</td>
						<td>
							<input type="radio" name="send_status" value="1">已发货
							<input type="radio" name="send_status" value="0">未发货
						</td>
					</tr>
					<else />
					<thead><tr><th colspan="14" style="text-align:center;">该用户不存在!</th></tr></thead>
				</notempty>
			</table>
			<button  class="btn btn-success" type="submit">保存</button>
			<button  class="btn btn-return" onclick="window.location.href = '{:U("Admin/Card/index")}'">返回</button>
		</div>
		</form>
	</div>
</block>

<block name="script">
	<script src="__JS__/common.js"></script>
	<script>
		$("input[type='radio'][name=send_status][value='{$card.send_status}']").attr("checked",true);
	</script>
</block>